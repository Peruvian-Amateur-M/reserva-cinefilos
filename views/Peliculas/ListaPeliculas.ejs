<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="styles.css" />
    <style>
      .movie-image {
        transition: transform 0.3s ease-in-out;
      }

      .movie-image:hover {
        transform: scale(1.05);
      }
    </style>
    <title>Listado de Películas</title>
  </head>
  <body>
    <%- include('../navbar.html') %>
    <!-- Incluye el Navbar -->

    <a href="/peliculas/create" class="btn btn-outline-primary m-4">+</a>
    <h1 class="text-center">Listado de Películas</h1>

    <div class="row row-cols-5 g-4 m-4">
      <% peliculas.forEach(function(pelicula) { %>
      <div class="col">
        <div class="card shadow movie-image">
          <img
            src="<%= pelicula.Portada %>"
            class="card-img-top animate__animated animate__fadeIn"
            alt="Imagen de la película"
            style="height: 400px"
          />
          <div class="card-body">
            <h5 class="card-title"><%= pelicula.Titulo %></h5>
            <p class="card-text">Duración: <%= pelicula.Duracion %> minutos</p>
            <p class="card-text">Género: <%= pelicula.Genero %></p>
            <p class="card-text">
              Clasificación: <%= pelicula.Clasificacion %>
            </p>
            <a
              href="/peliculas/<%= pelicula.Id_pelicula %>/asientos"
              class="btn btn-primary"
              >Ver Asientos Disponibles</a
            >
            <a
              href="/peliculas/editar/<%= pelicula.Id_pelicula %>"
              class="btn btn-warning"
              >Editar</a
            >
          </div>
        </div>
      </div>
      <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
