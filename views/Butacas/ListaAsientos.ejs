<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <style>
      .asiento-checkbox {
        display: none;
      }

      .asiento-label {
        display: inline-block;
        width: 50px;
        height: 50px;
        margin: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
        background-image: url("https://cdn-icons-png.flaticon.com/512/24/24868.png");
        background-size: cover;
      }

      .asiento-checkbox:checked + .asiento-label {
        background-color: red;
      }

      /* Estilos personalizados para centrar verticalmente */
      .center {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 100vh; /* Ajusta la altura según tus necesidades */
      }
      .pantalla-cine {
        background-color: #212124; /* Color rojo */
        height: 150px;
        margin-left: 315px;
        width: 700px !important;
        margin-bottom: 50px;
        transform: rotateX(-1deg);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.7),
          0 -5px 20px rgba(0, 0, 0, 0.7); /* Sombras en la parte superior e inferior */
      }
    </style>
    <script>
      // ... Tu script JavaScript aquí ...
    </script>
    <title>Document</title>
  </head>
  <body>
    <%- include('../navbar.html') %> <% if (pelicula) { %>
    <!-- Resto del contenido... -->

    <div class="container">
      <div class="row content-center">
        <div class="pantalla-cine"></div>
      </div>
    </div>

    <div
      class="container d-flex pb-5 justify-content-center align-items-center"
    >
      <form action="/asientos/confirmacion" method="post">
        <div class="">
          <input
            type="hidden"
            name="peliculaId"
            value="<%= pelicula.Id_pelicula %>"
          />

          <div class="d-flex">
            <% for (let i = 0; i < asientos.length; i++) { const asiento =
            asientos[i]; if (i % 9 === 0 && i !== 0) { %>
          </div>
          <div class="d-flex">
            <% } %>

            <input
              type="checkbox"
              class="asiento-checkbox"
              id="asiento<%= asiento.Id_asiento %>"
              name="asientosSeleccionados"
              value="<%= asiento.Id_asiento %>"
            />
            <label
              for="asiento<%= asiento.Id_asiento %>"
              class="asiento-label"
            ></label>

            <% } %>
          </div>
        </div>
        <input
          type="submit"
          value="Reservar Asientos"
          class="container d-flex justify-content-center bg-danger bg-opacity-75 mt-4 fw-bold"
          style="height: 50px; width: 200px"
        />
      </form>
    </div>
    <!-- Resto del contenido... -->
    <% } else { %>
    <p>Película no encontrada</p>
    <% } %>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
